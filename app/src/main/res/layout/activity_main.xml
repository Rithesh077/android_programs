<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scientific Calculator + Stopwatch"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp" />

        <!-- Expression Input -->
        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="end|center_vertical"
            android:textSize="22sp"
            android:padding="10dp"
            android:background="#EEEEEE" />

        <!-- Result Output -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="0"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="end|center_vertical"
            android:padding="10dp"
            android:background="#DDDDDD" />

        <!-- Scientific Buttons Row -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="5"
            android:useDefaultMargins="true"
            android:layout_marginTop="10dp">

            <!-- Row 1 -->
            <Button android:id="@+id/btnSin" android:text="sin"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

            <Button android:id="@+id/btnCos" android:text="cos"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

            <Button android:id="@+id/btnTan" android:text="tan"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

            <Button android:id="@+id/btnLog" android:text="log"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

            <Button android:id="@+id/btnLn" android:text="ln"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

            <!-- Row 2 -->
            <Button android:id="@+id/btnSqrt" android:text="√"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

            <Button android:id="@+id/btnPow" android:text="^"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

            <Button android:id="@+id/btnMod" android:text="%"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

            <Button android:id="@+id/btnPi" android:text="π"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

            <Button android:id="@+id/btnE" android:text="e"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

        </GridLayout>

        <!-- Parentheses & Clear Row -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="4"
            android:useDefaultMargins="true"
            android:layout_marginTop="10dp">

            <Button android:id="@+id/btnOpen" android:text="("
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

            <Button android:id="@+id/btnClose" android:text=")"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

            <Button android:id="@+id/btnBack" android:text="⌫"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

            <Button android:id="@+id/btnClear" android:text="C"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

        </GridLayout>

        <!-- Numbers and Operators Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="5"
            android:columnCount="4"
            android:useDefaultMargins="true"
            android:layout_marginTop="10dp">

            <!-- Row 7–9 -->
            <Button android:id="@+id/btn7" android:text="7"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>
            <Button android:id="@+id/btn8" android:text="8"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>
            <Button android:id="@+id/btn9" android:text="9"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>
            <Button android:id="@+id/btnDiv" android:text="÷"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

            <!-- Row 4–6 -->
            <Button android:id="@+id/btn4" android:text="4"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>
            <Button android:id="@+id/btn5" android:text="5"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>
            <Button android:id="@+id/btn6" android:text="6"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>
            <Button android:id="@+id/btnMul" android:text="×"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

            <!-- Row 1–3 -->
            <Button android:id="@+id/btn1" android:text="1"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>
            <Button android:id="@+id/btn2" android:text="2"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>
            <Button android:id="@+id/btn3" android:text="3"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>
            <Button android:id="@+id/btnMinus" android:text="−"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

            <!-- Row 0, ., =, + -->
            <Button android:id="@+id/btn0" android:text="0"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>
            <Button android:id="@+id/btnDot" android:text="."
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>
            <Button android:id="@+id/btnEqual" android:text="="
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>
            <Button android:id="@+id/btnPlus" android:text="+"
                android:layout_width="0dp" android:layout_height="60dp"
                android:layout_columnWeight="1"/>

        </GridLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#444"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp" />

        <!-- Stopwatch Display -->
        <TextView
            android:id="@+id/tvStopwatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00.00"
            android:textSize="42sp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp" />

        <!-- Stopwatch Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnStart"
                android:text="START"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/btnStop"
                android:text="STOP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/btnReset"
                android:text="RESET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
